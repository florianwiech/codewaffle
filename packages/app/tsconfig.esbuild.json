{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "emitDeclarationOnly": true,
    "declaration": true,
    "declarationDir": "types"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
