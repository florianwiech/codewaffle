{
  "private": true,
  "name": "@codewaffle/root",
  "version": "0.0.0",
  "repository": "git@github.com:florianwiech/codewaffle.git",
  "author": "Florian Wiech <florian.wiech@gmail.com>",
  "type": "module",
  "scripts": {
    "prepare": "husky install",
    "start:web": "yarn workspace @codewaffle/web start",
    "start:electron": "yarn workspace @codewaffle/electron start",
    "start:components": "yarn workspace @codewaffle/components storybook",
    "build": "turbo run build",
    "test": "turbo run test",
    "e2e:web": "yarn workspace @codewaffle/web e2e",
    "lint": "turbo run lint",
    "lint:ci": "turbo run lint:ci",
    "format:check": "prettier . --check --ignore-unknown",
    "format:write": "prettier . --write --ignore-unknown",
    "check:types": "turbo run check:types"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "@commitlint/cli": "^16.1.0",
    "@commitlint/config-conventional": "^16.0.0",
    "husky": "^7.0.0",
    "prettier": "^2.5.1",
    "pretty-quick": "^3.1.3",
    "turbo": "^1.1.2"
  },
  "packageManager": "yarn@1.22.17"
}
